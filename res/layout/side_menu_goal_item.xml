<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingRight="@dimen/padding_right_side_menu"
              android:paddingLeft="@dimen/padding_left_side_menu"
              android:paddingTop="@dimen/padding_top_side_menu_item">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border">

        <TextView
                android:id="@+id/side_menu_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Do my course work"
                android:gravity="center"
                android:layout_margin="@dimen/margin_view"/>
        <TextView
                android:id="@+id/side_menu_item_started_at"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Started at"
                android:gravity="center"
                android:layout_margin="@dimen/margin_view"/>
        <TextView
                android:id="@+id/side_menu_item_finish_at"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Finish at"
                android:gravity="center"
                android:layout_margin="@dimen/margin_view"/>
        <TextView
                android:id="@+id/side_menu_item_count_children"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="4"
                android:gravity="center"
                android:layout_margin="@dimen/margin_view"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/side_menu_item_lower_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right|center_vertical"
            android:visibility="gone"/>

</LinearLayout>
